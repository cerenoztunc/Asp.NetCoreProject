@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Ürünler</h1>
<a asp-controller="Product" asp-action="Create" class="btn btn-primary">Ürün Ekle</a>
<table class="table table-bordered mt-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Stok</th>
            <th>Fiyat</th>
            <th>Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Stock</td>
            <td>@item.Price</td>
            <td>@item.Category.Name</td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
        }
    </tbody>
    
</table>